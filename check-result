#!/bin/bash

die()
{
	echo "Fehler $@" >&2
	exit 1
}

[ "$#" -eq 1 ] || die "Expecting exactly one argument"
[ -r $1 ] || die "First arg must be a readable file"

echo "Checking for non ASCII chars..."
grep -n "[^A-Za-z0-9()&'.-]" -o $1 | sed '/: $/d'

echo "Please check manually: No \"ft\" for any artist..."

